{% extends 'layouts/base.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Listagem de Usuários</h3>
                    <div class="card-tools">
                        <a href="/configuracao/usuarios/new" class="btn btn-primary">Novo Usuário</a>
                    </div>
                </div>
                <div class="card-body">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Email</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for user in users %}
                                <tr>
                                    <td>{{ user.id }}</td>
                                    <td>{{ user.email }}</td>
                                    <td>
                                        <a href="/configuracao/usuarios/edit/{{ user.id }}" class="btn btn-sm btn-warning">Editar</a>
                                        <a href="/configuracao/usuarios/delete/{{ user.id }}" class="btn btn-sm btn-danger">Excluir</a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
