{% extends 'layouts/base.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">{{ titulo }}</h3>
                </div>
                <div class="card-body">
                    {% if session('error') %}
                        <x-alert variant="danger" dismissible="true">
                            {{ session('error') }}
                        </x-alert>
                    {% endif %}
                    <form action="/configuracao/usuarios/create" method="post">
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" name="email" id="email" class="form-control" value="{{ old('email') }}" required>
                            {% if session('errors.email') %}
                                <div class="text-danger">{{ session('errors.email') }}</div>
                            {% endif %}
                        </div>
                        <div class="form-group">
                            <label for="password">Senha</label>
                            <input type="password" name="password" id="password" class="form-control" required>
                            {% if session('errors.password') %}
                                <div class="text-danger">{{ session('errors.password') }}</div>
                            {% endif %}
                        </div>
                        <button type="submit" class="btn btn-primary">Salvar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
