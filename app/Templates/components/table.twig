{# table.html.twig #}

<table {{ attributes.merge({ class: 'table table-striped table-hover' } ) }}>
	<thead class="table-light">
		<tr>
			{% for h in headers %}
				<th>{{ h }}</th>
			{% endfor %}
		</tr>
	</thead>

	<tbody>
		{% for row in rows %}
			<tr>
				{% for cell in row %}
					{% set c = cell|default('') %}
					{% if c is same as(c|striptags) %}
						<td>{{ c }}</td>
					{% else %}
						<td>{{ c|raw }}</td>
					{% endif %}
				{% endfor %}
			</tr>
		{% endfor %}
	</tbody>
</table>
